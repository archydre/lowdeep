{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext", // Mudado de 'Preserve' para garantir o build dos tipos
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false, // <--- PRECISA SER FALSE para gerar os .d.ts
    "outDir": "./dist",
    "rootDir": "./src",

    // Configurações de importação
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
